<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".study_vocas.StudyVocas">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_study_vocas"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/CustomNoActionBarTheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/study_voca_logo_marginTop">

        <LinearLayout
            android:layout_width="@dimen/study_voca_layoutwidth"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/ivMoveToAnimalVocas"
                android:layout_width="@dimen/study_voca_width"
                android:layout_height="@dimen/study_voca_height"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/button_animal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/study_voca_textsize"
                android:text="동물"
                android:textStyle="bold"
                android:fontFamily="@font/cute"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/study_voca_layoutwidth"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/ivMoveToPlantVocas"
                android:layout_width="@dimen/study_voca_width"
                android:layout_height="@dimen/study_voca_height"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/button_plant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/study_voca_textsize"
                android:text="식물"
                android:textStyle="bold"
                android:fontFamily="@font/cute"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/study_voca_marginTop">

        <LinearLayout
            android:layout_width="@dimen/study_voca_layoutwidth"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/ivMoveToFlagVocas"
                android:layout_width="@dimen/study_voca_width"
                android:layout_height="@dimen/study_voca_height"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/button_flag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/study_voca_textsize"
                android:text="국기"
                android:textStyle="bold"
                android:fontFamily="@font/cute"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/study_voca_layoutwidth"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/ivMoveToCostomVocas"
                android:layout_width="@dimen/study_voca_width"
                android:layout_height="@dimen/study_voca_height"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/button_my_vocas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/study_voca_textsize"
                android:text="나만의 단어"
                android:textStyle="bold"
                android:fontFamily="@font/cute"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>