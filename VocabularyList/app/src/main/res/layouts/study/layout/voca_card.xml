<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivStudyCloseVoca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/card_margin"
        android:background="@drawable/rounded_rectangle"
        android:src="@drawable/ic_baseline_close_24" />

    <FrameLayout
        android:layout_width="@dimen/card_icon_width2"
        android:layout_height="@dimen/card_icon_height2">


        <ImageView
            android:id="@+id/ivStudyVoca"
            android:layout_width="@dimen/card_icon_width2"
            android:layout_height="@dimen/card_icon_height2"
            android:src="@drawable/ic_baseline_favorite_24"
            android:background="@drawable/rectangle_border"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/ivAddDeleteStarButton"
            android:layout_width="@dimen/star_width"
            android:layout_height="@dimen/star_height"
            android:src="@drawable/ic_baseline_star_border_24"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tvStudyVoca"
        android:layout_width="@dimen/card_icon_width"
        android:layout_height="@dimen/card_icon_height"
        android:layout_marginTop="@dimen/card_marginTop"
        android:textSize="@dimen/card_textsize"
        android:text="하트"
        android:textAlignment="center"
        android:background="@drawable/rectangle_border"
        />

    <ImageView
        android:id="@+id/ivWordSpeech"
        android:layout_width="@dimen/card_icon_width"
        android:layout_height="@dimen/card_icon_height"
        android:layout_marginTop="@dimen/card_margin"
        android:src="@drawable/ic_baseline_surround_sound_24"
        android:background="@drawable/rectangle_border"
        />

</LinearLayout>